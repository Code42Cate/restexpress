{
	"name": "restexpress",
	"version": "1.0.0",
	"description": "restful express generator that likes trains",
	"main": "lib/server",
	"author": "Tayfun Guelcan",
	"license": "MIT",
	"scripts": {
		"dev": "nodemon --exec babel-node src/server",
		"lint": "eslint src",
		"lint:fix": "eslint --fix src",
		"build": "babel src -d lib",
		"heroku-postbuild": "npm run build",
		"start": "node .",
		"serve": "node dist/server",
		"test": "ava src/**/*.test.js --verbose",
		"test:watch": "ava --verbose --watch",
		"cover": "nyc yarn test"
	},
	"devDependencies": {
		"@ava/babel": "^1.0.1",
		"@babel/cli": "^7.10.1",
		"@babel/core": "^7.10.1",
		"@babel/node": "^7.10.1",
		"@babel/plugin-proposal-export-default-from": "^7.10.1",
		"@babel/plugin-syntax-export-default-from": "^7.10.1",
		"@babel/plugin-transform-modules-commonjs": "^7.10.1",
		"@babel/preset-env": "^7.10.1",
		"ava": "^3.8.2",
		"babel-plugin-root-import": "^6.5.0",
		"eslint": "^6.8.0",
		"mongodb-memory-server": "^6.6.1",
		"nodemon": "^2.0.4",
		"nyc": "^15.0.1",
		"supertest": "^4.0.2"
	},
	"dependencies": {
		"body-parser": "^1.19.0",
		"bodymen": "^1.1.1",
		"compression": "^1.7.4",
		"cors": "^2.8.5",
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"lodash": "^4.17.15",
		"mongoose": "^5.9.16",
		"morgan": "^1.10.0",
		"querymen": "^2.1.4"
	},
	"nyc": {
		"reporter": [
			"lcov",
			"text",
			"html"
		]
	},
	"ava": {
		"files": [
			"src/**/*.js"
		],
		"require": [
			"babel-register"
		],
		"babel": "inherit"
	}
}
